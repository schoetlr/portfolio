<div class="row">
  <div class="col-xs-12">
    <h1>Edit Project</h1>
  </div>
</div>

<%= form_for [:admin, @project] do |f| %>
  
  
  <%= f.label :title %>
  
  <div class="form-group">
    <%= f.text_field :title, class: "form-control" %>
  </div>

  
  <%= f.label :description %>
  
  <div class="form-group">
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.label :importance %>
  
  <div class="form-group">
    <%= f.text_field :importance, class: "form-control" %>
  </div>

  <%= f.label :github_url %>
  
  <div class="form-group">
    <%= f.text_field :github_url, class: "form-control" %>
  </div>

  <%= f.label :production_url %>
  
  <div class="form-group">
    <%= f.text_field :production_url, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name, {}, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>



<% end %>
